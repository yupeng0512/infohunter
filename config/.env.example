# InfoHunter 环境变量配置
# 复制此文件到项目根目录并重命名为 .env，然后填入真实值

# ===== Twitter API =====
# TwitterAPI.io (关键词搜索主力) - https://twitterapi.io
TWITTERAPI_IO_KEY=your_twitterapi_io_key

# ScrapeCreators (博主详情/字幕辅助) - https://scrapecreators.com
SCRAPECREATORS_API_KEY=your_scrapecreators_api_key

# RSSHub (博主时间线备用) - 自部署实例地址
RSSHUB_BASE_URL=http://localhost:1200

# ===== YouTube API =====
# YouTube Data API v3 - https://console.cloud.google.com
YOUTUBE_API_KEY=your_youtube_api_key
# OAuth 2.0 (如果 API Key 被限制，需要 OAuth 认证)
# 通过 /api/youtube/oauth/authorize 获取授权 URL，完成授权后获取 refresh_token
YOUTUBE_OAUTH_CLIENT_ID=your_oauth_client_id
YOUTUBE_OAUTH_CLIENT_SECRET=your_oauth_client_secret
YOUTUBE_OAUTH_REFRESH_TOKEN=

# ===== Knot Agent (AG-UI) =====
KNOT_ENABLED=false
KNOT_API_BASE_URL=http://knot.woa.com
KNOT_MODEL=claude-4.5-sonnet

# 内容分析 Agent - 分析单条内容的观点/情感/价值
KNOT_CONTENT_AGENT_ID=your_content_agent_id
KNOT_CONTENT_AGENT_KEY=your_content_agent_api_key

# 趋势分析 Agent - 批量内容趋势洞察/日报
KNOT_TREND_AGENT_ID=your_trend_agent_id
KNOT_TREND_AGENT_KEY=your_trend_agent_api_key

# 博主评估 Agent - 评估博主/频道是否值得订阅
KNOT_RECOMMEND_AGENT_ID=your_recommend_agent_id
KNOT_RECOMMEND_AGENT_KEY=your_recommend_agent_api_key

# ===== 飞书通知 =====
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook_id
FEISHU_SECRET=your_feishu_secret
FEISHU_ENABLED=true

# ===== MySQL =====
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=infohunter
MYSQL_PASSWORD=your_secure_password_here
MYSQL_DATABASE=infohunter

# ===== 调度 =====
DEFAULT_FETCH_INTERVAL=14400
MIN_FETCH_GAP=300

# ===== 过滤 =====
MIN_QUALITY_SCORE=0.3
REALTIME_NOTIFY_THRESHOLD=0.6
MAX_REALTIME_PER_HOUR=10

# ===== 通用 =====
TIMEZONE=Asia/Shanghai
LOG_LEVEL=INFO
